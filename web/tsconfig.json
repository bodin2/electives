{
  "compilerOptions": {
    // General
    "module": "esnext",
    "target": "es2022",
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "jsxImportSource": "solid-js",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],

    // Modules
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    // Type Checking & Safety
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist", "src/api/**", "**/m3-solid/**"],
  "include": ["src"]
}
